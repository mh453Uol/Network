                return e.target.dataset.postId;
            }

            function like(e) {
                const postId = getPostIdAttribute(e);

                console.log(postId);
            }

            function unlike() {
                const postId = getPostIdAttribute(e);

                console.log(postId);
            }

        })
    </script>
}
